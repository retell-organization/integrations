{
	"npmClient": "yarn",
	"useWorkspaces": true,
  "conventionalCommits": true,
	"packages": [
		"packages/*"
	],
  "command": {
    "publish": {
      "npmClient": "npm"
    }
  },
	"version": "independent",
  "changelog": {
    "labels": {
      "feat": "New Feature",
      "fix": "Bug Fix",
      "docs": "Documentation",
      "types": "Types",
      "perf": "Performance",
      "refactor": "Refactor"
    }
  }
}
